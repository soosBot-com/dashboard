<div class="sidebar">
    <div class="profile">
       <span class="selected_server" style="opacity: 1; height: 40px; transform: none;"></span> 
        {{#if user.avatar}}
        <img src="https://cdn.discordapp.com/avatars/{{user.id}}/{{user.avatar}}?size=512" onclick="location.replace('/');">
            {{else}}
            <img src="https://cdn.discordapp.com/embed/avatars/0.png" onclick="location.replace('/');">
        {{/if}}
    </div>
    <hr class="separator">
    <div class="servers">
        <ul>
        {{#each guilds as |key value|}}
        <li>
            {{#if key.icon}}
            <div class="btn btn-primary tooltip"> <img class="server_icon" src="https://cdn.discordapp.com/icons/{{key.id}}/{{key.icon}}?size=64" alt="?" onclick="location.replace('/server/{{key.id}}');">
                <div class="right">
                    <p>{{key.name}}</p>
                    <i></i>
                </div>
            </div>
                {{else}}
                <div class="btn btn-primary tooltip"> <div class="server_with_out_icon" onclick="location.replace('/server/{{key.id}}');" ><h2>{{format_server_name key.name}}</h2></div>
                    <div class="right">
                        <p>{{key.name}}</p>
                        <i></i>
                    </div>
                </div>
            {{/if}}
        </li>
        {{/each}}
        </ul>
    </div>
</div>